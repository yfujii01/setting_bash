[user]
	name = yfujii01
	email = fancl01+github@gmail.com
[diff]
    tool = meld
[difftool "default-difftool"]
    cmd = meld $LOCAL $REMOTE
[merge]
	tool = meld
[mergetool "default-mergetool"]
	cmd = meld $LOCAL $BASE $REMOTE --auto-merge
[alias]
    a = add .
    c = commit
    p = push origin HEAD
    d = difftool -y -d -t default-difftool
    m = mergetool -y -t default-mergetool
    s = status --short
    # k = !gitk --all --date-order --simplify-by-decoration
    k = !gitk --all --date-order
    l = log --oneline --graph --decorate --all --date-order --simplify-by-decoration
[core]
	# editor = code --wait -new-window
	editor = 'vim' -c 'set fenc=utf-8'
	quotepath = false
	autocrlf = false
