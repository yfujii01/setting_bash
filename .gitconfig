[user]
    name = yfujii01
    email = fancl01+github@gmail.com
[alias]
    a = add .
    c = commit
    p = push origin HEAD
    dm = difftool -t meld -y -d # -d があると -y は意味ない
    dv = difftool -t vimdiff
    dvd = difftool -t vimdiff -d # -d つけると変更ファイルの一覧が見える(ただしそこからdiffとって変更はできない)
    # dv = difftool -t vimdiff -y # -y をつけると複数変更がある場合に終了できなくて困る
    s = status --short
    k = !gitk --all --date-order # --simplify-by-decoration をつけると個別のコミットが隠れる
    l = log --oneline --graph --decorate --all --date-order # --simplify-by-decoration をつけると個別のコミットが隠れる
    conf = config -l
[core]
    ## editor = code --wait -new-window
    editor = vim
    quotepath = false
    autocrlf = false
